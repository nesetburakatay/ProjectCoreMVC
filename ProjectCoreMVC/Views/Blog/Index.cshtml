@using EntityLayer.Concreate
@model List<Blog>
@{
    ViewData["Title"] = "Index";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Posts</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card pb-4">
                            <a href="/Blog/BlogDetails/@item.BlogId">
                                <img src="~/Theme-Main/images/@(item.BlogImage).jpg" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @item.BlogCreateDateTime.ToString("d")
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 21
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> 2000
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    @item.BlogTitle - @item.Category.CategoryName
                                </h5>
                                <p class="card-text mb-3">@item.BlogContent.Substring(0, item.BlogContent.Substring(0, 120).LastIndexOf(" "))...</p>
                                <a href="/Blog/BlogDetails/@item.BlogId" class="btn btn-primary read-m">Read More</a>
                            </div>
                        </div>
                    }
                </div>
                <!--//left-->
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-left mt-4">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>